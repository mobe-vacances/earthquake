<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="helloandroid.m2dl.earthquake">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Earthquake">
        <service android:enabled="true" android:name=".game_menu.BackgroundSoundService" />
        <activity android:name=".game_menu.Rules"></activity>
        <activity android:name=".game_menu.Credit" />
        <activity
            android:name=".game_menu.GameOver"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_menu.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>